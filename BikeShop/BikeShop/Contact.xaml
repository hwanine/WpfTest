      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Contact"
      Background="{StaticResource background}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="119*"/>
            <ColumnDefinition Width="41*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Sender" VerticalAlignment="Top" Margin="10,10,0,0" Grid.ColumnSpan="2"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox Grid.ColumnSpan="3" Height="23" Margin="79,9,202,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TextBox_TextChanged"/>
        <TextBox Grid.ColumnSpan="3" Margin="79,43,202,80" TextWrapping="Wrap" />


    </Grid>
</Page>
